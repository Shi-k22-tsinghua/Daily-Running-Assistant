/* pages/postdetail/postdetail.wxss */
.container {
    padding: 10px;
  }
  
  /* 帖子样式 */
  .post {
    width: 100%;
    margin-bottom: 20px;
    padding: 3px;
    border: 1px solid #e0e0e0;
    border-radius: 5px;
  }
  
  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px; /* 根据需要调整间距 */
  }
  
  /* 作者和时间样式 */
  .post-author, .post-time {
    font-size: 16px; /* 根据需要调整字体大小 */
    color: #666; /* 根据需要调整字体颜色 */
  }
  

  .post-title {
    display: block;
    font-size: 24px;
    font-weight: bolder;
    margin-bottom: 5px;
    color: #333;
  }
  
  .post-content {
    display: block;
    margin-bottom: 10px;
    font-size: 18px;
  }

  .post-image {
    width: 100px;
    height: 100px;
    margin-top: 10px;
    border-radius: 5px;
  }
  .post-interaction {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 10px;
  }
  
  .comment-count, .like-count {
    color: #888;
    font-size: 14px;
  }
  
  /* 评论区域样式 */
  .comments-section {
    width: 100%;
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    bottom: 50px;
  }
  
  .comment {
    width: 95%;
    margin-bottom: 10px;
    padding: 10px;
    background-color: #f8f8f8;
    border-radius: 4px;
  }
  
  .comment-text {
    font-size: 14px;
    color: #555;
  }
  
  /* 评论输入区域样式 */
  .comment-input {
    position: fixed;
    bottom: 20px;
    width: 95%;
    display: flex;
    align-items: center;
    margin-top: 20px;
  }
  
  input[type="text"] {
    flex: 1;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    margin-right: 10px;
  }
  
  button {
    padding: 10px 20px;
    max-width: 100px;
    background-color: #49bbb5;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 16px;
  }
  
  button:active {
    background-color: #179B16;
  }