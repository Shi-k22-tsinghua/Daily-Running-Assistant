.container {
    padding: 10px;
}

/* 帖子部分 */
.post {
    width: 100%;
    margin-bottom: 20px;
    padding: 3px;
    border: 1px solid #e0e0e0;
    border-radius: 5px;
}

.post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.post-author,
.post-time,
.commentator,
.comment-time {
    font-size: 16px;
    color: #666;
}

.post-content {
    display: block;
    margin-bottom: 10px;
    font-size: 18px;
}

.post-title {
    display: block;
    font-size: 24px;
    font-weight: bolder;
    margin-bottom: 5px;
    color: #333;
}

.post-image {
    width: 100%;
    height: 200px;
    border-radius: 8px;
    margin: 5px 0;
}

.post-interaction {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 10px;
}

.comment-count,
.like-count {
    color: #888;
    font-size: 16px;
}

/* 评论部分 */
.comments-section {
    width: 100%;
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    bottom: 50px;
    margin-bottom: 50px;
}

.comment {
    width: 95%;
    margin-bottom: 10px;
    padding: 10px;
    background-color: #f8f8f8;
    border-radius: 4px;
}

.comment-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    margin-bottom: 10px;
}

.comment-text {
    font-size: 16px;
}

.comment-input {
    position: fixed;
    bottom: 0rpx;
    padding-bottom: 20rpx;
    width: 95%;
    display: flex;
    align-items: center;
    margin-top: 20px;
    z-index: 10;
    background-color: white;
}

input[type="text"] {
    flex: 1;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    margin-right: 10px;
}

button {
    padding: 10px 20px;
    max-width: 100px;
    background-color: #49bbb5;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 16px;
}

button:active {
    background-color: #179B16;
}