/* pages/run/run.wxss */
.container{
    padding: 100rpx 10rpx;
}

.button{
    width: 400rpx;
    height: 400rpx;
    background-color: #f8f8f8;
    margin: 50rpx;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: #009688 solid 5rpx;
    color: #009688;
}

.pic{
    width: 250rpx;
    height: 250rpx;
}

.tab-bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    background-color: #f8f8f8;
    border-top: 1px solid #ccc;
    padding: 10rpx 0;
}

.tab-item {
    width: 187.5rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 5rpx;
}