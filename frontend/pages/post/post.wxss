/* pages/post/post.wxss */
.container {
  padding-top: 10px;
  width: 90%;
  min-height: 100%;
}

.post-editor {
  width: 90%;
}

.title-input{
  width: 100%;
  height: 40px; /* 设置一个更高的高度 */
  font-size: 24px; /* 增大字体大小 */
  line-height: 30px; /* 调整行高以匹配字体大小 */
  margin-bottom: 15px; /* 在输入框下方增加一些间距 */
}

.image-upload-button,
.publish-button {
  
  width: 100%;
  margin-top: 5px;
  color: white;
  background-color: rgb(49, 128, 111);
}

.content-textarea {
  width: 100%;
  height: 200px; /* 可以根据需要调整高度 */
  margin-top: 10px;
  border: 1px solid #ccc; /* 增加边框，可以根据您的设计调整颜色 */
  border-radius: 4px; /* 增加边框圆角 */
  box-sizing: border-box; /* 确保边框和内边距不会增加额外的宽度 */
}

.separator {
  height: 10px; /* 分隔线的高度 */
  background-color: #f2f2f2; /* 分隔线的颜色 */
}

.image-upload-area {
  position: relative;
  margin-top: 10px;
}

.image-preview {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
}

.image-preview-item {
  width: 100px; /* 图片预览的宽度 */
  height: 100px; /* 图片预览的高度 */
  margin-right: 10px;
  margin-bottom: 10px;
  object-fit: cover; /* 保持图片比例 */
}

.delete-button {
  display: none; /* 默认隐藏删除按钮 */
  /* 其他样式... */
}