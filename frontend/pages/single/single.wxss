.container {
    height: 100vh; /* 设置容器高度为视口高度 */
}

.map {
    width: 100%;
    height: 1000rpx;
    margin-top: 0;
    flex: 1;
}

.counter{
    background-color: #90e0ef;
    opacity: 0.8;
    position: fixed;
    top: 20rpx;
    right: 20rpx;
    display: flex;
    flex-direction: column;
    border-width: 0;
    margin: 0;
    padding: 0;
}

.counter text{
    display: block;
}

.button-container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    background-color: transparent;
    margin: 0 0;
    position: absolute;
    bottom: 200rpx;
}

.run-button {
    padding: 0;
    width: 150rpx;
    height: 150rpx;
    background-color: transparent;
}

.run-button image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
