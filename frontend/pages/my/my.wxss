/* pages/my/my.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 90vh;
    /* 使容器至少和视口一样高 */
    padding: 20rpx;
}

.profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20px;
    background-color: #e0e0ff;
    padding: 20px;
    border-radius: 10px;
}

.avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 10px;
}

.username {
    font-size: 24px;
    margin-bottom: 10px;
}

.record-button {
    background-color: #ffffff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 16px;
}

.contact {
    margin-top: 20px;
    font-size: 14px;
    color: #666666;
}

