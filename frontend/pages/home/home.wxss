/* pages/home/home.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
}

.user-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    padding: 10rpx;
}

.profile-pic {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.user-text {
    display: flex;
    flex-direction: column;
}

.username {
    font-size: 36rpx;
    font-weight: bold;
}

.date {
    font-size: 28rpx;
    color: #999;
}

.map {
    width: 100%;
    height: 800rpx;
    margin-top: 20rpx;
}

.run-button {
    width: 80%;
    height: 80rpx;
    background-color: #d0c838;
    border-radius: 40rpx;
    color: #fff;
    margin: 10rpx;
}

.start-button {
    background-color: #009688;
}

.track-button {
    background-color: #7aad49;
}

.tab-bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    background-color: #fff;
    border-top: 1px solid #ccc;
    padding: 10rpx 0;
}

.tab-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 5rpx;
}