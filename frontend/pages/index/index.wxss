.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
    height: 100vh;
    background-color: #f2f2f2;
  }
  
  .login-title {
    font-size: 48rpx;
    font-weight: bold;
    margin-top: 50rpx;
    color: #333;
  }
  
  .input-container {
    width: 80%;
    margin-top: 30rpx;
  }
  
  .input-box {
    width: 100%;
    height: 80rpx;
    padding: 0 20rpx;
    border-radius: 20rpx;
    border: 1px solid #ddd;
    background-color: #fff;
    box-sizing: border-box;
  }
  
  .login-button, .register-button {
    width: 80%;
    height: 80rpx;
    margin-top: 40rpx;
    border-radius: 20rpx;
    border: none;
    background-color: #009688;
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .register-button {
    background-color: #8c8c8c;
  }
  
  .wx-login-button {
    width: 80%;
    height: 80rpx;
    margin-top: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
    background-color: #07c160;
    color: #fff;
    font-size: 32rpx;
  }
  
  .wechat-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
  }
