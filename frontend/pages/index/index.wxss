/**index.wxss**/

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
    height: 100vh;
    background-color: #f2f2f2;
}

.login-title {
    font-size: 48rpx;
    font-weight: bold;
    margin-top: 50rpx;
    margin-bottom: 50rpx;
}

.input-container {
    width: 80%;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
}

.input-box {
    width: 100%;
    height: 80rpx;
    padding: 0 20rpx;
    border-radius: 20rpx;
    border: 1px solid #ddd;
    box-sizing: border-box;
    background-color: #fff;
}

.login-button,
.register-button {
    height: 80rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    border-radius: 20rpx;
    background-color: #009688;
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
}

.login-button {
    margin-top: 100rpx;
}

.register-button {
    background-color: #7aad49;
    color: #fff;
}

.wx-login-button {
    height: 80rpx;
    margin-top: 10rpx;
    margin-bottom: 100rpx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
    border-width: 2rpx;
    border-color: #07c160;
    border-style: solid;
    color: #07c160;
    font-size: 32rpx;
}

.wechat-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}